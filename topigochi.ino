void inicializarMascota() {
  strcpy(miMascota.fase, "huevo");
  miMascota.salud = 10;
  miMascota.felicidad = 10;
  miMascota.saciado = 10;
  miMascota.limpieza = 10;
  miMascota.educacion = 4;
